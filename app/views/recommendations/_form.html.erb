<%= render "layouts/errors", :object => @recommendation %>

<%= form_for @recommendation do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :job_description %><br>
  <%= f.text_field :job_description %><br>
  <%= f.label :email %><br>
  <%= f.email_field :email %><br>
  <%= f.label :phone %><br>
  <%= f.text_field :phone %><br>
  <%= f.label :url %><br>
  <%= f.text_field :url %><br>
  <%= f.file_field :picture %>
  <br>
  <%= f.submit 'Update Recommendation', class: 'btn btn-success' %>
<% end %>
