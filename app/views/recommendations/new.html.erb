<div class="center-align container form-container">
  <h1>New Recommendation</h1>
  <% if @recommendation.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @recommendation.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <%= form_for @recommendation do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, class:"form-control" %><br>
  <%= f.label :job_description %><br>
  <%= f.text_field :job_description, class:"form-control" %><br>
  <%= f.label :email %><br>
  <%= f.email_field :email, class:"form-control" %><br>
  <%= f.label :phone %><br>
  <%= f.text_field :phone, class:"form-control" %><br>
  <br>
  <%= f.submit "Submit", class:"btn btn-success" %>
  <% end %>
</div>