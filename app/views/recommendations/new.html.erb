<h1>New Recommendation</h1>

  <%= form_for @recommendation do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :job_description %>
    <%= f.text_field :job_description %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
    <%= f.submit  %>
  <% end %>
