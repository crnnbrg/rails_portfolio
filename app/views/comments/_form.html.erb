<%= render('layouts/errors', :object => @comment) %>

  <%= form_for [@project, @comment] do |f| %>
    <%= f.label :review %>
    <%= f.text_field :review %>
    <%= f.select(:user_id) do %>
    <% User.all.each do |usr| %>
      <%= content_tag(:option, usr.name, value: usr.id) %>
    <% end %>
  <% end %>
  <%= f.submit %>
  <% end %>
